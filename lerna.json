
{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
      "version": {
          "allowBranch": "master",
          "exact": true,
          "ignoreChanges": [
              "**/*.md"
          ],
          "message": "build: release version %v"
      }
  }
}
